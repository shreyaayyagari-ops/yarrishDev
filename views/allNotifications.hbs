<div class="row p-2" style="margin: 0;">
    <div class="col-md-12">
        <div class="card mt-2" style="border-left: 2px solid black;">
            <div class="card-header" style="background-color:white; color:black;">
                <h4><b>Notifications</b></h4>
            </div>
            <div class="card-body p-2">
                <!-- Add Notification Form -->
                <form action="/admin/add-notification" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" id="title" name="title" minlength="1" maxlength="20" required
                            class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea id="message" name="message" minlength="10" maxlength="200" required
                            class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="role">To</label>
                        <select name="role" class="form-control" id="role" required>
                            <option value="user">User</option>
                            <option value="service_provider">Service Provider</option>
                        </select>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" style="background-color: black;">Add Notification</button>
                    </div>
                </form>

              

            </div>
        </div>
    </div>
</div>

{{>footer}}