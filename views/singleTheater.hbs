                                                <select name="status" class="form-control">
                                                    <option value="Active" {{#eq User.status 'Active' }} selected
                                                        {{/eq}}>
                                                        Active</option>
                                                    <option value="Inactive" {{#eq User.status 'Inactive' }} selected
                                                        {{/eq}}>Inactive</option>
                                                </select>
                                            </div>
                                        </div>


                                        <div class="col-md-6">
                                            <div class="form-group">
