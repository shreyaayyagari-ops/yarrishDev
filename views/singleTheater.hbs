{{>header}}
<title>Theater Details</title>
<section class="content">
    <div class="container-fluid">
        <div class="row pb-2 pr-2 pl-2">
            <div class="col-md-12">
                <div class="card card-primary card-outline mt-3">
                    <div class="card-header" style="background-color: white; color:rgb(0, 0, 0);">
                        <h4><b>Theater Details</b></h4>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-primary card-outline" style="border-left: 2px solid black;">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-box" style="height: 50%; width:50%"
                                src="{{ServiceProvider.photo}}" alt="User image"
                                onerror="this.onerror=null; this.src='/admin/images/dummy.png';">
                        </div><br>
                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Name</b>
                                <p class="float-right">
                                    {{ServiceProvider.name}}
                                </p>
                            </li>
                            <li class="list-group-item">
                                <b>Email</b>
                                <p class="float-right">
                                    {{ServiceProvider.email}}
                                </p>
                            </li>
                            <li class="list-group-item">
                                <b>Phone</b>
                                <p class="float-right">
                                    {{ServiceProvider.phone}}
                                </p>
                            </li>

                            <li class="list-group-item">
                                <b>Address</b>
                                <p class="float-right">
                                    {{#if
                                    ServiceProvider.address.address}}{{ServiceProvider.address.address}}{{else}}--------{{/if}}
                                </p>
                            </li>

                            <li class="list-group-item">
                                <b>Adhar No</b>
                                <p class="float-right">
                                    {{#if
                                    ServiceProvider.aadhar_no}}{{ServiceProvider.aadhar_no}}{{else}}--------{{/if}}
                                </p>
                            </li>

                            <li class="list-group-item">
                                <b>Passport No</b>
                                <p class="float-right">
                                    {{#if
                                    ServiceProvider.passport_no}}{{ServiceProvider.passport_no}}{{else}}--------{{/if}}
                                </p>
                            </li>

                            <li class="list-group-item">
                                <b>Status</b>
                                <p class="float-right">
                                    {{!-- {{#if User.status}} --}}
                                    {{User.status}}
                                    {{!-- {{else}}--------{{/if}} --}}
                                </p>
                            </li>

                            <li class="list-group-item">
                                <b>Driving License No</b>
                                <p class="float-right">
                                    {{#if
                                    ServiceProvider.drivers_license_no}}{{ServiceProvider.drivers_license_no}}{{else}}--------{{/if}}
                                </p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header p-8">
                        <ul class="nav nav-pills">
                            <li class="nav-item"><a class="nav-link active" href="#details" data-toggle="tab">Theater Details</a>
                            </li>
