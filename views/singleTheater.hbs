                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="details">
                                <form method="post" action="/admin/update-service-provider/{{ServiceProvider._id}}"
                                    enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="col-form-label">Name<span
                                                        class="text-danger"></span></label>
                                                <input type="text" class="form-control" name="name" readonly
                                                    value="{{ServiceProvider.name}}" placeholder="Name">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="col-form-label">Phone<span
                                                        class="text-danger"></span></label>
                                                <input type="text" class="form-control" name="name" readonly
                                                    value="{{ServiceProvider.phone}}" placeholder="Phone Number">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="col-form-label">Address <span
                                                        class="text-danger"></span></label>
                                                <input type="text" class="form-control" name="name" readonly
                                                    value=" {{#if
                                    ServiceProvider.address.address}}{{ServiceProvider.address.address}}{{else}}--------{{/if}}" placeholder="Address">
                                            </div>

                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="col-form-label">Aadhar No.<span
                                                        class="text-danger"></span></label>
                                                <!-- Directly use ServiceProvider.aadhar_no since it's a string value -->
                                                <input type="text" class="form-control" name="name" readonly value=" {{#if
                                    ServiceProvider.aadhar_no}}{{ServiceProvider.aadhar_no}}{{else}}--------{{/if}}"
                                                    placeholder="Aadhar">
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="col-form-label">Passport No.<span
                                                        class="text-danger"></span></label>
                                                <!-- Directly use ServiceProvider.aadhar_no since it's a string value -->
                                                <input type="text" class="form-control" name="name" readonly
                                                    value="{{#if ServiceProvider.passport_no}}{{ServiceProvider.passport_no}}{{else}}--------{{/if}}"
                                                    placeholder="Passport">
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="col-form-label">Drivng License No.<span
                                                        class="text-danger"></span></label>
                                                <!-- Directly use ServiceProvider.aadhar_no since it's a string value -->
                                                <input type="text" class="form-control" name="name" readonly
                                                    value="{{#if ServiceProvider.drivers_license_no}}{{ServiceProvider.drivers_license_no}}{{else}}--------{{/if}}"
                                                    placeholder="Drivng License">
                                            </div>

