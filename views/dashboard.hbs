    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // First Pie Chart
        const ctx1 = document.getElementById('myPieChart').getContext('2d');

        const myPieChart1 = new Chart(ctx1, {
            type: 'pie', // Chart type
            data: {
                labels: ['Pending', 'Approved', 'Rejected', 'Completed', 'Cancelled'],
                datasets: [{
                    label: 'Vote Distribution',
                    data: [10, 15, 5, 8, 2], // Replace with dynamic or static data
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.6)',
                        'rgba(54, 162, 235, 0.6)',
                        'rgba(255, 206, 86, 0.6)',
                        'rgba(75, 192, 192, 0.6)',
                        'rgba(153, 102, 255, 0.6)',
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                    ],
                    borderWidth: 1 // Border width for slices
                }]
            },
            options: {
                plugins: {
                    legend: {
                        position: 'top' // Legend position
                    },
                    tooltip: {
                        enabled: true // Enable tooltips
                    }
                },
                responsive: true
            }
        });

        // Second Pie Chart
        const ctx2 = document.getElementById('myPieChart1').getContext('2d');

        const myPieChart2 = new Chart(ctx2, {
            type: 'doughnut', // Chart type
            data: {
                labels: ['Service Provider', 'User', 'Movie Theater', 'Admin'],
                datasets: [{
                    label: 'Vote Distribution',
                    data: [{{ data2 }}], // Replace with dynamic or static data
                backgroundColor: [
                    'rgba(255, 99, 132, 0.6)',
                    'rgba(54, 162, 235, 0.6)',
                    'rgba(255, 206, 86, 0.6)',
                    'rgba(75, 192, 192, 0.6)',
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                ],
                borderWidth: 1 // Border width for slices
            }]
        },
            options: {
            plugins: {
                legend: {
                    position: 'top' // Legend position
                },
                tooltip: {
                    enabled: true // Enable tooltips
                }
            },
            responsive: true
        }
        });
    </script>

    <script>
        // Get the canvas element
        const ctx = document.getElementById('uniqueBarChart').getContext('2d');

        // Create a gradient for the bars
        // Create a gradient for the bars
        const gradient = ctx.createLinearGradient(0, 0, 0, 400);
        gradient.addColorStop(0, '#a8e6cf'); // Top color (light mint green)
        gradient.addColorStop(1, '#2c9686'); // Bottom color (rich teal)

        // Data for the chart
        const data = {
            labels: ['January', 'February', 'March', 'April', 'May'],
            datasets: [{
                label: 'Subscriptions',
                data: [500, 800, 400, 700, 900],
                backgroundColor: gradient,
                borderColor: '#2c9686',
                borderWidth: 1,
                borderRadius: 10, // Rounded corners
                hoverBackgroundColor: '#37bfa9' // Slightly brighter teal for hover effect
            }]
        };


        // Chart options
        const options = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: true,
                    labels: {
                        color: '#333',
                        font: {
                            size: 14,
                        }
                    }
                },
                tooltip: {
                    callbacks: {
                        label: function (context) {
                            return `${context.raw} in sales`;
                        }
                    },
                    backgroundColor: '#333',
                    titleColor: '#fff',
                    bodyColor: '#fff',
                    titleFont: {
                        size: 14,
                    },
                    bodyFont: {
                        size: 12,
                    },
                }
            },
            scales: {
                x: {
                    grid: {
                        display: false
                    },
                    ticks: {
                        color: '#555',
                        font: {
                            size: 12,
                        }
                    }
                },
                y: {
                    beginAtZero: true,
                    grid: {
                        color: '#ddd'
                    },
                    ticks: {
                        color: '#555',
                        font: {
                            size: 12,
                        }
                    }
                }
            }
        };

        // Create the bar chart
        new Chart(ctx, {
            type: 'bar',
            data: data,
            options: options
        });
    </script>


