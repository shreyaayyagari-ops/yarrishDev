<script>
    let data1
    function subCategory() {
        var category = document.getElementById('category').value;

        // Clear previous subcategory options
        var subcategoryDropdown = document.getElementById('subcategory');
        subcategoryDropdown.innerHTML = '<option value="" disabled selected>Select Services Sub-Category</option>';

        var baseUrl = window.location.origin;

        // Make an API call to fetch subcategories based on the selected category
        fetch(`${baseUrl}/api/city/subcategories/${category}`)
            .then(response => response.json())
            .then(data => {
                // Populate the subcategory dropdown with the fetched subcategories
                data1 = data
                data.forEach(subcategory => {
                    var option = document.createElement('option');
                    option.value = subcategory.name;
                    option.textContent = subcategory.name;
                    subcategoryDropdown.appendChild(option);
                });
            })
            .catch(error => {
                console.error('Error fetching subcategories:', error);
            });
    }

    function categories() {
        var subcategory = document.getElementById('subcategory').value;

        // Find the selected subcategory in data1
        var selectedSubcategory = data1.find(item => item.name === subcategory);

        // Get the flavor dropdown
        var flavorDropdown = document.getElementById('flavor');

        // Check if the flavor is 'false' and make the dropdown read-only
        if (selectedSubcategory && selectedSubcategory.flavor === 'false') {
            flavorDropdown.setAttribute('disabled', 'disabled');
        } else {
            // Enable the dropdown if the flavor is not 'false'
            flavorDropdown.removeAttribute('disabled');
        }
    }


</script>

<script>
    const fileInput = document.getElementById('icon_path');
    const errorMessage = document.getElementById('error-message');

    fileInput.addEventListener('change', async (event) => {
        errorMessage.style.display = 'none'; // Reset error message
        const file = event.target.files[0];

        if (!file) return; // No file selected

        // Validate file size (e.g., 2 MB limit)
        const maxSizeInBytes = 2 * 1024 * 1024; // 2 MB
        if (file.size > maxSizeInBytes) {
            errorMessage.textContent = 'File size exceeds 2 MB.';
            errorMessage.style.display = 'block';
            fileInput.value = ''; // Reset file input
            return;
        }

        // Validate dimensions (400x400 px)
        const image = new Image();
        image.src = URL.createObjectURL(file);

        image.onload = () => {
            if (image.width !== 400 || image.height !== 400) {
                errorMessage.textContent = 'Image dimensions must be 400x400 px.';
                errorMessage.style.display = 'block';
                fileInput.value = ''; // Reset file input
            } else {
                console.log('Image is valid.');
            }
            URL.revokeObjectURL(image.src); // Free up memory
        };
    });
</script>

<script>
    function validateImage(input) {
        const file = input.files[0];
        const errorElement = document.getElementById('error_message');
        errorElement.style.display = 'none';

        if (file) {
            const allowedFormats = ['image/jpeg', 'image/png'];
            const img = new Image();

            // Check file type
            if (!allowedFormats.includes(file.type)) {
                errorElement.textContent = "Only JPG and PNG formats are allowed.";
                errorElement.style.display = 'block';
                input.value = ''; // Reset file input
                return;
            }

            // Check dimensions
            img.onload = function () {
                const width = img.naturalWidth;
                const height = img.naturalHeight;

                if (width !== 400 || height !== 400) {
                    errorElement.textContent = "Image dimensions must be 400x400 px.";
                    errorElement.style.display = 'block';
                    input.value = ''; // Reset file input
                }
            };

            // Read the image file
            const reader = new FileReader();
            reader.onload = function (e) {
                img.src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    }
</script>

<script>
    const subServiceInput = document.getElementById("sub-service");
    const subErrorMessage = document.getElementById("sub-error-message");

    subServiceInput.addEventListener("input", function () {
        // Check if the length of the input is less than 3 characters
        if (subServiceInput.value.length < 2 && subServiceInput.value.trim() !== "") {
            subErrorMessage.style.display = "block";  // Show error message
            subServiceInput.style.borderColor = "red"; // Apply red border color
        } else {
            subErrorMessage.style.display = "none";  // Hide error message if valid
            subServiceInput.style.borderColor = "";  // Remove red border color if valid
        }
    });


</script>

