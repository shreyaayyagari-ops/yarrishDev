<script>
    $(document).ready(function () {
        // Example of dynamic messages from the backend (passed into the template engine)
        const successMsg = '{{ success }}';
        const errorMsg = '{{ error }}';


        if (successMsg) {
            showToast('success', successMsg);
        }
        if (errorMsg) {
            showToast('error', errorMsg);
        }
    });

    function showToast(type, message) {
        const toast = document.querySelector(`.toast.${type}`); // Select the correct toast type
        const toastMessage = toast.querySelector('.toast-message');
        toastMessage.textContent = message; // Set the dynamic message

        // Set dynamic background color based on type
        let bgColor;
        switch (type) {
            case 'success':
                bgColor = '#4CAF50'; // Green for success
                break;
            case 'error':
                bgColor = '#f44336'; // Red for error
                break;
            case 'warning':
                bgColor = '#ff9800'; // Orange for warning
                break;
            case 'info':
                bgColor = '#2196F3'; // Blue for info
                break;
            default:
                bgColor = '#323232'; // Default dark background
        }
        toast.style.backgroundColor = bgColor;

        // Ensure the toast is visible
        toast.style.display = 'flex';
        toast.style.opacity = '1';

        // Auto-hide the toast after 3 seconds
        setTimeout(() => {
            toast.style.opacity = '0'; // Fade-out effect
            setTimeout(() => {
                toast.style.display = 'none'; // Hide completely after fade-out
            }, 300); // Match the fade-out duration
        }, 3000); // Display duration
    }


    function closeToast(element) {
        const toast = element.parentElement;
        toast.style.opacity = "0";
        setTimeout(() => {
            toast.style.display = "none";
        }, 300);
    }
</script>