<script>
    $(document).ready(function () {
        // Show success and error messages if they are set
        if ($('#successMessage').text()) {
            $('#successMessage').fadeIn();
            setTimeout(function () {
                $('#successMessage').fadeOut();
            }, 3000); // Hide after 3 seconds
        }

        if ($('#errorMessage').text()) {
            $('#errorMessage').fadeIn();
            setTimeout(function () {
                $('#errorMessage').fadeOut();
            }, 3000); // Hide after 3 seconds
        }

        // Handle form submission
        $('form').on('submit', function (e) {
            // Disable the submit button to prevent multiple submissions
            var submitButton = $('button[type="submit"]');
            submitButton.prop('disabled', true); // Disable button

            // Optionally show a loading indicator or change button text here

            // Re-enable the submit button after 3 seconds
            setTimeout(function () {
                submitButton.prop('disabled', false); // Re-enable button
            }, 9000); // 3 seconds
        });
    });
</script>




