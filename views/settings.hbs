{{>header}}
<style>
    /* For Webkit browsers (Chrome, Safari, Edge) */
    input[type="number"]::-webkit-outer-spin-button,
    input[type="number"]::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* For Firefox */
    input[type="number"] {
        -moz-appearance: textfield;
    }
</style>
<link rel="stylesheet" href="/admin/css/summernote-bs4.min.css">
<title>Settings</title>
<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card card-primary card-outline mt-3" style="border-left: 2px solid black;">
                    <div class="card-header text-left" style="background-color: white; color:black;">
                        <h3><b>Settings</b></h3>
                    </div>
                </div>
                <form method="post" action="/admin/updatesettings/{{allSettings._id}}">
                    <div class="card">
                        <div class="card-body">
                            <!-- Service Provider Section -->
                            {{!-- <div class="text-center mb-4">
                                <h4><b>Service Provider</b></h4>
                            </div>
                            <div class="form-group">
                                <label>
                                    <h5><b>Privacy Policy</b></h5>
                                </label>
                                <textarea name="serviceProviderPrivacyPolicy" id="summernote1"
                                    class="form-control">{{allSettings.serviceProviderPrivacyPolicy}}</textarea>
                            </div>
                            <div class="form-group">
                                <label>
                                    <h5><b>Refund Policy</b></h5>
                                </label>
                                <textarea name="serviceProviderRefundPolicy" id="summernote2"
                                    class="form-control">{{allSettings.serviceProviderRefundPolicy}}</textarea>
                            </div>
                            <div class="form-group">
                                <label>
                                    <h5><b>Terms & Conditions</b></h5>
                                </label>
                                <textarea name="serviceProviderTermsAndConditions" id="summernote3"
                                    class="form-control">{{{allSettings.serviceProviderTermsAndConditions}}}</textarea>
                            </div>
                            <div class="form-group">
                                <label>
                                    <h5><b>About App</b></h5>
                                </label>
                                <textarea name="serviceProviderAboutUs" id="summernote4"
                                    class="form-control">{{{allSettings.serviceProviderAboutUs}}}</textarea>
                            </div> --}}

                            <!-- User Section -->
                            {{!-- <div class="text-center mb-4 mt-5">
                                <h4><b>User</b></h4>
                            </div>
                            <div class="form-group">
                                <label>
                                    <h5><b>Privacy Policy</b></h5>
                                </label>
                                <textarea name="userPrivacyPolicy" id="summernote5"
                                    class="form-control">{{{allSettings.userPrivacyPolicy}}}</textarea>
                            </div>
                            <div class="form-group">
                                <label>
                                    <h5><b>Refund Policy</b></h5>
                                </label>
                                <textarea name="userRefundPolicy" id="summernote6"
                                    class="form-control">{{{allSettings.userRefundPolicy}}}</textarea>
                            </div>
                            <div class="form-group">
                                <label>
                                    <h5><b>Terms & Conditions</b></h5>
                                </label>
                                <textarea name="userTermsAndConditions" id="summernote7"
                                    class="form-control">{{{allSettings.userTermsAndConditions}}}</textarea>
                            </div>
                            <div class="form-group">
                                <label>
